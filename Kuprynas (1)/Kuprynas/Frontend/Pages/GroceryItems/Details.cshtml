@page
@model Kuprynas.Pages.GroceryItems.DetailsModel
@{
    ViewData["Title"] = "Grocery Item Details";
}

<h1>Grocery Item Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.GroceryItem.Name</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.GroceryItem.Category</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.GroceryItem.Quantity</dd>

        <dt class="col-sm-2">Unit</dt>
        <dd class="col-sm-10">@Model.GroceryItem.Unit</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.GroceryItem.Price</dd>

        <dt class="col-sm-2">Purchased</dt>
        <dd class="col-sm-10">@Model.GroceryItem.Purchased</dd>
    </dl>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>
